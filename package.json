{
  "name": "thorin-parent",
  "private": true,
  "license": "MIT",
  "scripts": {
    "m-all": "pnpm m run --workspace-concurrency 1",
    "build": "pnpm m-all build",
    "build:components": "pnpm -F @ensdomains/thorin build",
    "clean": "pnpm m-all clean",
    "dev": "pnpm m run dev",
    "gen:component": "node scripts/generateComponent.js",
    "gen:icons": "node scripts/generateIcons.js",
    "lint": "eslint -c eslint.config.mjs",
    "lint:styles": "stylelint docs/**/*.css",
    "postinstall": "husky install",
    "prepublish": "pnpm clean && pnpm build:components",
    "size": "pnpm build:components && pnpm size-limit",
    "test": "pnpm -F @ensdomains/thorin run test",
    "publish:local": "pnpm prepublish && yalc publish components/ --no-scripts --push --up",
    "publish": "pnpm clean && pnpm -F @ensdomains/thorin publish"
  },
  "lint-staged": {
    "*.{js,mdx,ts,tsx}": [
      "pnpm lint"
    ],
    "*.css": [
      "pnpm lint:styles"
    ],
    "*.{json,md,yml}": [
      "pnpm lint:format"
    ]
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^1.15.2",
    "@eslint/compat": "^1.2.2",
    "@eslint/js": "^9.14.0",
    "@next/eslint-plugin-next": "^14.2.17",
    "@size-limit/preset-big-lib": "^11.1.6",
    "@stylistic/eslint-plugin": "^2.10.1",
    "@stylistic/stylelint-config": "^2.0.0",
    "@types/dedent": "^0.7.2",
    "@vitest/coverage-v8": "^2.1.4",
    "dedent": "^1.5.3",
    "eslint": "^9.14.0",
    "globals": "^15.12.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "playroom": "^0.38.1",
    "postcss-syntax": "^0.36.2",
    "prompt": "^1.3.0",
    "react-docgen-typescript": "^2.2.2",
    "react-hook-form": "^7.53.1",
    "size-limit": "^11.1.6",
    "stylelint": "^16.10.0",
    "stylelint-config-recommended": "^14.0.1",
    "typescript": "5.7.2",
    "typescript-eslint": "^8.13.0",
    "utility-types": "^3.11.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-transition-state": "^2.1.3"
  },
  "pnpm": {
    "overrides": {
      "ts-morph": "17.0.1"
    }
  },
  "packageManager": "pnpm@9.4.0"
}
