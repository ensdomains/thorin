{
  "name": "thorin-parent",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "components",
    "docs"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -i run build",
    "build:components": "yarn workspace @ensdomains/thorin build",
    "clean": "yarn workspaces foreach -p run clean",
    "dev": "yarn workspaces foreach -pi run dev",
    "gen:component": "yarn node scripts/generateComponent.js",
    "gen:icons": "yarn node scripts/generateIcons.js",
    "lint": "eslint . --cache",
    "lint:fix": "yarn lint --fix",
    "lint:format": "prettier --write .",
    "lint:types": "yarn workspaces foreach -p run lint:types",
    "lint:styles": "stylelint",
    "postinstall": "husky install",
    "prepublish": "yarn clean && yarn build:components",
    "size": "yarn build:components && yarn size-limit",
    "test": "yarn workspaces foreach -p run test",
    "publish:local": "yarn prepublish && yalc publish components/ --no-scripts --push --up",
    "publish": "yarn clean && yarn workspace @ensdomains/thorin publish"
  },
  "lint-staged": {
    "*.{js,mdx,ts,tsx}": [
      "yarn lint:fix"
    ],
    "*.tsx": [
      "yarn lint:styles"
    ],
    "*.{json,md,yml}": [
      "yarn lint:format"
    ]
  },
  "devDependencies": {
    "@size-limit/preset-big-lib": "^6.0.3",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@svgr/babel-plugin-remove-jsx-attribute": "^6.0.0",
    "@svgr/cli": "^5.5.0",
    "@svgr/core": "^5.5.0",
    "@types/dedent": "^0.7.0",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/styled-components": "^5",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-jest": "^27.5.1",
    "change-case": "^4.1.2",
    "dedent": "^0.7.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "12.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.5.2",
    "eslint-plugin-mdx": "^1.15.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "jest-styled-components": "^7.0.8",
    "lint-staged": "^11.2.6",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.4.1",
    "prompt": "^1.2.0",
    "react-docgen-typescript": "^2.1.1",
    "react-hook-form": "^7.31.2",
    "size-limit": "^6.0.3",
    "stylelint": "^14.8.5",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "typescript": "4.4.4",
    "typescript-styled-plugin": "^0.18.2",
    "utility-types": "^3.10.0",
    "yalc": "^1.0.0-pre.53"
  },
  "dependencies": {
    "styled-components": "^5.3.3"
  }
}
