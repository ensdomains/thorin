{
  "compilerOptions": {
    "moduleDetection": "force",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./components/*"]
    },
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true
  }
}