{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "declaration": true,
    "jsx": "react",
    "outDir": "./dist/types",
    "paths": {
      "!/*": ["../*"],
      "@/*": ["./*"]
    },
    "types": [
      "@testing-library/jest-dom",
      "jest",
      "vite/client",
      "vite-plugin-svgr/client"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
